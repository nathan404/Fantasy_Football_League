<h1><%= @game.score %></h1>

<p><a href='/teams/<%= @game.home_team_id %>'><%= @game.home_team %></a></p>
<p><a href='/teams/<%= @game.away_team_id %>'><%= @game.away_team %></a></p>

<h3>Team lineups:</h3>

<table>
    <tr>
        <th>No.</th>
        <th></th>
        <th>Player</th>
        <th></th>
        <th>Position</th>
        <th></th>
        <th>Position</th>
        <th></th>
        <th>Player</th>
        <th></th>
        <th>No.</th>
    </tr>

    <% for player in @game.home_team_lineup %>
    <tr>
        <td><%= player.shirt_number%></td>
        <td></td>
        <td><%= player.format_name%></td>
        <td></td>
        <td><%= player.position%></td>
    </tr>
    <% end%>

    <% for player in @game.away_team_lineup %>
    <tr>
        <td><%= player.position%></td>
        <td></td>
        <td><%= player.format_name%></td>
        <td></td>
        <td><%= player.shirt_number%></td>
    </tr>
    <% end%>



</table>


<form method="POST" action="/games/<%= @game.id %>/delete">
<input type="submit" value="Delete Game"/>
</form>
