
<div class='teams-page'>
<div id='team-wrapper'>

<h2>Active Teams</h2>

<% @teams.each do |team| %>
    <p><a href='/teams/<%= team.id %>'><%= team.name %></a></p>
<% end %>


<h2>Current table </h2>

<table>
    <thead class="league_table">
        <tr>
            <th>Team</th>
            <th></th>
            <th>P</th>
            <th></th>
            <th>W</th>
            <th></th>
            <th>D</th>
            <th></th>
            <th>L</th>
            <th></th>
            <th>GF</th>
            <th></th>
            <th>GA</th>
            <th></th>
            <th>Pts</th>
        </tr>
    </thead>    
    <tbody>
        <% @teams.each do |team| %>
        <tr>
            <td class="team_name"><%= team.name%></td>
            <td></td>
            <td><%= team.played%></td>
            <td></td>
            <td><%= team.wins%></td>
            <td></td>
            <td><%= team.draws%></td>
            <td></td>
            <td><%= team.losses%></td>
            <td></td>
            <td><%= team.goals_for%></td>
            <td></td>
            <td><%= team.goals_against%></td>
            <td></td>
            <td><%= team.points%></td>
        </tr>
        <% end %>
    </tbody>

</table>
</div>

<div class="photocolumn">
<p><img src="/images/zidane.jpeg" id="player-new-image"/></p>
<p><img src="/images/bergkamp.jpeg" id="player-new-image"/></p>
<p><img src="/images/collins.jpeg" id="player-new-image"/></p>
</div>
</div>
